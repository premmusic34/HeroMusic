{
    "name": "Hero",
    "logo": "https://telegra.ph/file/0f6f8a8a5ad69fe5ecf3d.png",
    "description": "An Advanced Premium Music Bot For Telegram Groups VC.",
    "keywords": ["musicbot", "telegram"],
    "repository": "https://github.com/Shailendra34/Hero",
    "stack": "container",
    "env": {
        "API_ID": {
            "description": "Your App ID",
            "required": true
        },
        "API_HASH": {
            "description": "Your App Hash",
            "required": true
        },
        "BOT_USERNAME": {
            "description": "Put Bot Username Without '@' Ex:- adityaprobot",
            "required": true,
            "value": "Heromusics_bot"
        },
        "BOT_TOKEN": {
            "description": "Put Bot Token Of Your Bot",
            "required": true
        },
        "BG_IMAGE": {
            "description": "Custom Thumbnail (Leave it if You Don't Want)",
            "required": false,
            "value": "https://telegra.ph/file/0f6f8a8a5ad69fe5ecf3d.png"
       },
        "DURATION_LIMIT": {
            "description": "Maximum Duration For Song",
            "required": true,
            "value": "900"
        },
        "STRING_SESSION": {
            "description": "Pyrogram String Session",
            "required": true
        },
        "SUDO_USERS": {
            "description": "Put Your User ID (Separted By Space)",
            "required": true,
            "value": "1323020756 2004042280"
        },
        "HEROKU_APP_NAME": {
            "description": "heroku app name paste here",
            "required": true
        },
        "HEROKU_API_KEY": {
            "description": "Heroku api key paste here",
            "required": true    
        }
    },
    "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "https://github.com/jonathanong/heroku-buildpack-ffmpeg-latest.git"
    }
  ]
}
